<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kzvda.menumanagementsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RestaurantMenuActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.RestaurantInfoActivity" />
        <activity
            android:name=".activity.RegistrationActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ChangePersonalInfoActivity" />
        <activity android:name=".activity.SendNotificationActivity" />
        <activity android:name=".activity.EditRestaurantInformationActivity" />
        <activity
            android:name=".activity.ChangeMenuActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ManageTemplatesActivity" />
        <activity android:name=".activity.NewDishActivity" />
        <activity android:name=".activity.ManageUsersActivity" />
        <activity android:name=".activity.ManageUsersAccountsActivity" />
        <activity android:name=".activity.SupportActivity" />
        <activity android:name=".activity.EditTemplateActivity"></activity>
    </application>

</manifest>